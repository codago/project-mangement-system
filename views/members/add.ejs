
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title><%= title %> | Project Management System </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' />
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' />
</head>
<body>
  <% include ../partials/menu %>

  <div class="container" style="float: left; width:20%">
    <ul class="nav nav-sidebar">
    <li class="activesidebar"><a href="/projects/overviews/<%= idURL %>/overview">Overview <span class="sr-only">(current)</span></a></li>
      <li><a href="/projects/overviews/<%=idURL%>/activity">Activity</a></li>
      <li>&nbsp</li>
    </ul>
    <ul class="nav nav-sidebar">
      <li><a href="/projects/overviews/<%= idURL %>/members">Members</a></li>
      <li><a href="/projects/overviews/<%= idURL %>/issues">Issues</a></li>
    </ul>
  </div>

  <div class="container" style="background-color: white; float: right; width: 80%">
    <div class="panel-body">
      <form method="post" action="/projects/overviews/<%= idURL %>/members/add">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">
            Name
          </label>
          <br><br>

          <% for(let i = 0; i < users.length; i++){ %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="members" value="<%= users[i].userid %>"<%=(members.indexOf(users[i].userid) !== -1) ? "checked" : "" %>>
              <%= `${users[i].firstname} ${users[i].lastname} - ${users[i].role}` %>
            </label>
          </div>
          <% } %>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" name="submit" class="btn btn-primary">Add</button>
            <a href="/projects/overviews/<%= idURL %>/members" class="btn btn-primary">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
  </div>


<% include ../partials/footer %>
