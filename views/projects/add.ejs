<% include ../partials/header %>
<% include ../partials/menu %>

<div class="container">
  <h1>Add Project</h1>
  <br>
    <form class="form-horizontal" method="post" action="/projectadd">
      <div class="form-group">
        <label class="control-label col-sm-1" for="name">Project</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" id="name" name="name" placeholder="Project name" required>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-1" for="pwd">Members</label>

          <div class="col-sm-5">
            <%for(let i=0;i<users.length;i++){%>
              <label class="col-sm-10 checkbox">
                 <input type="checkbox" name="members" value="<%= users[i].userid %>"><%= users[i].firstname +" "+ users[i].lastname%>
               </label>
            <%}%>
          </div>
      </div>
    <button class="btn btn-success" type="submit">Add</button>
    </form>
  </div>

  <% include ../partials/footer %>
