<% include partials/header %>
<% include partials/menu %>
<div class="container">
  <form class="form-horizontal" method="post" action="/profile">
    <div class="form-group">
      <label class="control-label col-sm-1" for="email">Email</label>
      <div class="col-sm-5">
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" readonly="true" value = "<%=userData.email%>">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-1" for="pwd">Password</label>
      <div class="col-sm-5">
        <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter password">
      </div>
    </div>
      <%if(userData.privilege == "Admin"){%>
    <div class="form-group">
      <label class="control-label col-sm-1" for="pwd">Position</label>
        <div class="col-sm-5">
             <label class="col-sm-5 radio">
                <input type="radio" name="position" value="Manager" <%= (userData.position === "Manager") ?"checked":''%>>Manager
              </label>
              <label class="col-sm-10 radio">
                <input type="radio" name="position" value="Software Developer" <%= (userData.position === "Software Developer") ?"checked":''%>>Software Developer
              </label>
              <label class="col-sm-5 radio">
                <input type="radio" name="position" value="Quality Assurance" <%= (userData.position === "Quality Assurance") ?"checked":''%>>Quality Assurance
              </label>
        </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-1" for="pwd">Type Fulltime</label>
      <div class="col-sm-5">
        <label class="col-sm-5 checkbox">
          <input type="checkbox" name="cfulltime" <%= userData.isfulltime ?"checked":''%>>
        </label>
      </div>
    </div>
  <%}%>

    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-5">
        <button type="Update" class="btn btn-success">Update</button>
      </div>
    </div>

    <%if(message.length > 0) {%><label class="label label-success"><%=message%></label><%}%>

  </form>

</div>

<% include partials/footer %>
